@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container">
    <h1 class="mt-4 mb-3">
        Employee Information
    </h1>
    <div class="row">
        <div class="col-md-8 mb-4">
            <br />
            <form asp-page="Index" method="post" name="employeeInformation" id="employeeForm">
                <div class="control-group form-group">
                    <div class="controls">
                        <label asp-for="Employee.Name">Name:</label>
                        <input asp-for="Employee.Name" class="form-control" />
                    </div>
                </div>
                <br />
                <h2 class="mt-4 mb-3">Dependents  <button class="btn btn-dark" asp-page-handler="Add">Add</button></h2>
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                <label>Name</label>
                            </th>
                            <th>
                                <label>Type</label>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Employee.Dependents.Count; i++)
                        {
                            <tr>
                                <td>
                                    <input asp-for="Employee.Dependents[i].Name" class="form-control" />
                                </td>
                                <td>
                                    <input asp-for="Employee.Dependents[i].Type" class="form-control" />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <br />
                <button type="submit" class="btn btn-dark" id="previewEmployeeCosts">Preview Costs</button>
            </form>
        </div>
    </div>
</div>
